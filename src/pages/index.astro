---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Welcome to Astro.">
	<main>
		<div class="main-content">
			<section class="side-projects">
				<h3>Some of my side projects</h3>

				<div class="project-list">
					<div class="project">
						<h5>üê§ Tweety</h5>

						<div class="project-content">
							<span class="img"></span>
							<div class="description">
								<span>
									Tweety is a web application that allows you to create an image using the twitter user most recent tweets. The application connects to the Twitter API, retrieves the most recent tweets, and uses Hugging Face's stable diffusion model to generate an image.
								</span>
								<div class="buttons">
									<button>Repository</button>
								</div>
							</div>
						</div>
					</div>

					
				</div>
			</section>
		</div>
	</main>
</Layout>

<style lang="scss">
	main {
		display: flex;
		justify-content: center;

		.main-content {
			padding: 2rem;
			margin: 0 2rem;
			flex: 1;
			max-width: 60rem;
		}

		.side-projects {

			h3 {
				font-size: 1.6rem;
				margin-bottom: 1rem;
			}

			.project-list {
				// border: 1px solid red;
				// padding: 0.5rem;
				display: flex;
				gap: 10px;
				flex-direction: column;
				align-items: flex-start;
	
				.project {
					// border: 1px solid brown;
					background-color: white;
					box-shadow: 0px 1px 4px rgba(0, 0, 0, 0.387);
					border-radius: 10px;
					padding: 1rem;

					h5 {
						font-size: 1.3rem;
						font-weight: 500;
						margin-bottom: 1rem;
					}

					.project-content {
						display: grid;
						grid-template-columns: 10rem 30rem;
						grid-template-rows: 10rem;
						gap: 15px;

						.img {
							// border: 1px solid black;
							background-color: blueviolet;
							border-radius: 10px;
						}

						.description {
							padding: 0.5rem;
							display: grid;
							grid-template-rows: auto 2rem;

							.buttons {
								display: flex;
								align-items: center;
								justify-content: flex-end;
							}
						}
					}
				}
			}
		}

	}
</style>
