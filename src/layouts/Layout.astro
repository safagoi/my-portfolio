---
import Header from "../components/Header.astro";

export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<Header />
		<slot />
	</body>
</html>
<style is:global lang="scss">
	:root {
		--bg-color: #f5f5dc;
		--font-color: #232222;
		// Botones
		--btn-bg-color: #ffbf00;
		--btn-bg-hover-color: #ffcd36;
		// Project Card
		--project-card-bg-color: white;
		--project-card-border: none;
		--project-card-img-border: 1px solid rgb(212,202,202);

	}
	
	[data-theme="light"] {
		--bg-color: #f5f5dc;
		--font-color: #232222;

		--btn-bg-color: #ffbf00;
		--btn-bg-hover-color: #ffcd36;

		--project-card-bg-color: white;
		--project-card-border: none;
		--project-card-img-border: 1px solid rgb(212,202,202);
	}
	
	[data-theme="dark"] {
		--bg-color: black;
		--font-color: rgb(22, 245, 22);
		--btn-bg-color: rgb(73, 27, 73);
		--btn-bg-hover-color: rgb(195, 44, 195);

		--project-card-bg-color: black;
		--project-card-border: 1px solid rgb(22, 245, 22);
		--project-card-img-border: 1px solid rgb(22, 245, 22);
	}
	
	* {
		margin: 0;
		padding: 0;
		box-sizing: content-box;
	}
	
	html,
	body {
		font-family: "Rubik";
		height: 100%;
		width: 100%;

		transition: all .2s ease-in-out; // Efecto transici√≥n colores de los temas
	}

	/* Layout */
	body {
		display: grid;
		grid-template-rows: 10rem 1fr;
		background-color: var(--bg-color);
		color: var(--font-color);
	}

	button {
		/* Button component styles */
		padding: 0.45rem 0.75rem;
		min-width: 5rem;
		border: none;
		background-color: var(--btn-bg-color);
		color: var(--font-color);
		border-radius: 5px;
		cursor: pointer;
		font-weight: 600;
		box-shadow: 0px 1px 1px rgba(0, 0, 0, 0.387);
		transition: transform 0.3s ease-out;

		&:hover {
			background-color: var(--btn-bg-hover-color);
			transform: translateY(-2px);
		}
	}

	.button-icon {
		display: flex;
		align-items: center;
		justify-content: space-between;
		gap: 0rem 0.75rem;
	}

